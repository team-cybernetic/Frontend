<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.web.HTMLEditor?>
<AnchorPane xmlns:fx="http://javafx.com/fxml/1" fx:id="rootPane" maxHeight="1.7976931348623157E308"
            maxWidth="1.7976931348623157E308"
            prefHeight="504.0" prefWidth="740.0" stylesheets="@Editor.css"
            xmlns="http://javafx.com/javafx/8.0.111" fx:controller="diamonddeer.ui.editor.EditorController">
    <GridPane AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0"
              AnchorPane.topAnchor="0.0">
        <columnConstraints>
            <ColumnConstraints hgrow="ALWAYS"/>
            <ColumnConstraints hgrow="NEVER" minWidth="-Infinity"/>
        </columnConstraints>
        <rowConstraints>
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
        </rowConstraints>
        <VBox minWidth="-Infinity" spacing="8.0">
            <GridPane.margin>
                <Insets bottom="8.0" left="8.0" right="8.0" top="8.0"/>
            </GridPane.margin>
            <Label alignment="TOP_LEFT" maxWidth="1.7976931348623157E308" minWidth="-Infinity"
                   text="New Post" underline="true" VBox.vgrow="ALWAYS"/>
            <GridPane hgap="4.0" minHeight="-Infinity" minWidth="-Infinity" vgap="4.0">
                <columnConstraints>
                    <ColumnConstraints hgrow="NEVER" prefWidth="65.0"/>
                    <ColumnConstraints hgrow="ALWAYS" maxWidth="1.7976931348623157E308"/>
                </columnConstraints>
                <rowConstraints>
                    <RowConstraints minHeight="-Infinity" vgrow="SOMETIMES"/>
                    <RowConstraints minHeight="-Infinity" vgrow="SOMETIMES"/>
                    <RowConstraints minHeight="-Infinity" vgrow="SOMETIMES"/>
                </rowConstraints>
                <Label text="Title:"/>
                <TextField fx:id="titleTextField" maxWidth="1.7976931348623157E308"
                           promptText="Post title..." GridPane.columnIndex="1"/>
                <Label text="Tags:" GridPane.rowIndex="1"/>
                <HBox maxWidth="1.7976931348623157E308" spacing="2.0" GridPane.columnIndex="1"
                      GridPane.hgrow="ALWAYS" GridPane.rowIndex="1">
                    <TextField fx:id="tagsTextField" prefWidth="100.0" />
                    <Button styleClass="btn" fx:id="tagsAddButton" mnemonicParsing="false"
                            onAction="#handleTagsAddButtonAction" text="+"/>
                </HBox>
                <Label minHeight="-Infinity" text="Featured media:" wrapText="true"
                       GridPane.rowIndex="2"/>
                <HBox alignment="CENTER_LEFT" GridPane.columnIndex="1" GridPane.rowIndex="2">
                    <Button styleClass="btn" fx:id="mediaAddButton" mnemonicParsing="false"
                            onAction="#handleMediaAddButtonAction" text="+"/>
                    <HBox alignment="CENTER" HBox.hgrow="ALWAYS">
                        <ImageView fx:id="mediaImageView" pickOnBounds="true"
                                   preserveRatio="true" HBox.hgrow="SOMETIMES"/>
                    </HBox>
                </HBox>
            </GridPane>
            <StackPane fx:id="contentStackPane" minHeight="250.0" prefWidth="550.0" VBox.vgrow="ALWAYS">
                <TextArea fx:id="contentTextArea" wrapText="true"/>
                <HTMLEditor fx:id="contentHTMLEditor"/>
            </StackPane>
        </VBox>
        <VBox maxHeight="1.7976931348623157E308" maxWidth="170.0" minHeight="-Infinity" minWidth="170.0"
              prefWidth="170.0" spacing="4.0" GridPane.columnIndex="1">
            <padding>
                <Insets bottom="8.0" left="8.0" right="8.0" top="8.0"/>
            </padding>
            <Label minWidth="-Infinity" text="Post settings" underline="true"/>
            <CheckBox fx:id="postSettingsPrivateCheckBox" mnemonicParsing="false" text="Private"/>
            <CheckBox fx:id="postSettingsForbidRepliesCheckBox" mnemonicParsing="false"
                      text="Forbid replies"/>
            <CheckBox fx:id="postSettingsForbidSharingCheckBox" mnemonicParsing="false"
                      text="Forbid sharing"/>
            <Label text="Content type:"/>
            <ComboBox fx:id="postSettingsContentTypeComboBox" editable="true" promptText="Auto..."/>
            <VBox alignment="BOTTOM_LEFT" minHeight="-Infinity" spacing="4.0" VBox.vgrow="ALWAYS">
                <Label minWidth="-Infinity" text="Editor settings" underline="true"/>
                <RadioButton fx:id="editorSettingsHTMLEditorRadioButton" mnemonicParsing="false"
                             onAction="#handleEditorSettingsHTMLEditorRadioButtonAction" selected="true"
                             text="HTML Editor">
                    <toggleGroup>
                        <ToggleGroup fx:id="editorType"/>
                    </toggleGroup>
                </RadioButton>
                <RadioButton fx:id="editorSettingsPlaintextEditorRadioButton" mnemonicParsing="false"
                             onAction="#handleeditorSettingsPlaintextEditorRadioButtonAction"
                             text="Plaintext Editor">
                    <toggleGroup>
                        <ToggleGroup fx:id="editorType"/>
                    </toggleGroup>
                </RadioButton>
            </VBox>
        </VBox>
    </GridPane>
</AnchorPane>
